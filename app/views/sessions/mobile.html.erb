<meta name="viewport" content="width=device-width, initial-scale=1.0">




    <nav class='mobile_sign_in' role="navigation">
      <h3>Sign in</h3>
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.text_field :email, placeholder: "Enter email" %>

        <%= f.password_field :password, placeholder: "Enter password" %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary", style: "display:block; width:100%" %>
      <% end %>
      <h3 class="text-center">or </h3>
      <button class="btn-info btn-large text-center" id="sign-up-div" style="display:block; width:100%">Sign up now!</button> 
    </nav>


    <nav class='mobile_sign_up' role="navigation2">
      <h3>Sign up</h3>
      <%= form_for(@business) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.text_field :name, placeholder: "Enter Restaurant Name" %>

        <%= f.text_field :address, placeholder: "Enter Restaurant Address" %>

        <%= f.text_field :email, placeholder:"Enter Email Address" %>

        <%= f.password_field :password, placeholder:"Enter Password" %>

        <%= f.password_field :password_confirmation, placeholder:"Confirm Password" %>

        <%= f.submit "Create My Account", class: "btn btn-large btn-primary", style: "display:block; width:100%" %>
      <% end %>
      <h3>Whoops...</h3>
      <button class="btn-info btn-large text-center" id="sign-in-div" style="display:block; width:100%">Take me back to sign in!</button> 
    </nav>




