$( "#file_upload_spoof").click(function(){$( "input:file" ).click()});

  $(function() {
     $("input:file").change(function (){
       $( "#file_upload_spoof" ).removeClass("btn-primary").addClass("btn-success");                 
     });
  });

</script>
